<% include partials/header%>
        <div class="col-sm" style="padding-top: 10px">
                <div class="card" style="border-radius: 0;">
                    <div class="card-body">
                        <form action="/login" method="post">
                            <div class="d-flex justify-content-center">
                                <img style="height: 150px" src="assets/plant.svg">
                            </div>
                            <p class="text-center" style="font-size: 1.7rem; 
                                font-weight: 600;
                                font-family: Arial, Helvetica, sans-serif; 
                                background: -webkit-linear-gradient( -75deg, #5c8635 5%, rgba(58,73,89,1) 95%);
                                background-clip: text;
                                -webkit-text-fill-color: transparent;
                                -webkit-background-clip: text;
                                -webkit-text-fill-color: transparent;">E-DISCARD</p>
                            <div class="form-group">
                                <input type="email" class="form-control" name="username" placeholder="E-mail">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="Senha">
                            </div>
                            <div class="form-group">
                                <% if(errorArr && errorArr.length > 0){ %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>E-mail ou senha incorreta!</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                                <% } %>
                                <% if(successArr && successArr.length > 0){ %>
                                <div class="alert alert-success" role="alert"> <%= successArr %> </div>
                                <% } %>                      
                            </div>
                            <div class="form-group">
                                <button class="btn botao btn-block" >ENTRAR</button> 
                            </div>
                               
                        </form>

                    </div>
                </div>
                
                <div class="card" style="margin-top: 10px; border-radius: 0;">
                    <div class="card-body">
                        <p style="margin-bottom: 1px">NÃ£o tem uma conta? <a href="/register">Cadastre-se!</a></p>
                    </div>
                </div>
            </div>
    </div>
</div>
<% include partials/footer%>